@model TimeManager.Common.Entities.Proyecto

@{
    ViewBag.Title = "Crear proyecto";
}
@section Breadcrumb{
    <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
    <li class="breadcrumb-item">@Html.ActionLink("Proyecto", "Index", "Proyecto")</li>
    <li class="breadcrumb-item active">Crear</li>
}

<div class="row">
    <div class="col-sm-12 col-lg-3">
        <div class="card text-white bg-primary mb-0">
            <div class="card-header"><h4><i class="fa fa-user-plus"></i>&nbsp;Proyecto</h4></div>
            <div class="card-body">
                <h5>Crear un nuevo proyecto</h5>
                <p class="card-text">Ingrese la información necesaria para crear un proyecto.</p>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-lg-9">
        @using (Html.BeginForm("Create", "Proyecto", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-sm-12">
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control col-sm-12" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Guardar nuevo" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Volver", "Index")
</div>