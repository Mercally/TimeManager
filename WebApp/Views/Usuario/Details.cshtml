@using TimeManager.WebApp.Extensions
@using TimeManager.Common.Entities
@model Usuario

@{
    ViewBag.Title = "Detalle usuario";
}

<div class="row">
    <div class="col-sm-12 col-lg-3">
        <div class="card text-white bg-primary mb-0">
            <div class="card-header"><h4><i class="fa fa-user"></i>&nbsp;Usuario</h4></div>
            <div class="card-body">
                <h5>Detalle del usuario</h5>
                <p class="card-text">Información almacenada del usuario.</p>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-lg-9">
        <div class="form-row">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-12">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control col-sm-12", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-lg-12">
                        @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control col-sm-12", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-12">
                        @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control col-sm-12", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Contrasenia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-12">
                        @Html.ActionLink("Modificar contraseña", "EditPass", "Usuario", new { id = Model.Id })
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.FechaRegistro, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-sm-12">
                        @Html.EditorFor(model => model.FechaRegistro, new { htmlAttributes = new { @class = "form-control col-sm-12", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.EsActivo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-lg-12">
                        @Html.EditorFor(model => model.EsActivo, new { htmlAttributes = new { @class = "form-control col-sm-12", @readonly = "readonly" } })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Volver", "Index")
</div>